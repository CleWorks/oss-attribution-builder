{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es2015",
    "lib": [
      "dom",
      "es2017"
    ],
    "sourceMap": true,
    "rootDir": "./",
    "outDir": "./build/",
    "pretty": true,
    "strict": true,
    "noImplicitAny": false,
    "noUnusedLocals": true
  },
  "include": [
    "server/**/*.ts",
    "spec/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}